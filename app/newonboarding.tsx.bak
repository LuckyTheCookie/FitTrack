};

// 2. Barre de progression Segment√©e (La nouvelle version que tu as aim√©e)
const SegmentedProgress = ({ current, total }: { current: number; total: number }) => {
  return (
    <View style={styles.progressContainer}>
      {Array.from({ length: total }).map((_, i) => {
        const isActive = i <= current;
        return (
          <View key={i} style={styles.progressSegmentBg}>
             <Animated.View 
               style={[
                 styles.progressSegmentFill, 
                 { width: isActive ? '100%' : '0%', backgroundColor: i === current ? THEME.primary : '#FFF' }
               ]} 
               layout={Layout.springify()}
             />
          </View>
        );
      })}
    </View>
  );
};

// --- MAIN SCREEN ---

export default function OnboardingScreen() {
  const { t } = useTranslation();
  const router = useRouter();
  const { updateSettings, updateWeeklyGoal } = useAppStore();

  const [currentStep, setCurrentStep] = useState(0);
  const [selectedGoal, setSelectedGoal] = useState<FitnessGoal | null>(null);
  const [selectedLevel, setSelectedLevel] = useState<FitnessLevel | null>(null);
  const [weeklyGoal, setWeeklyGoal] = useState(3);

  const handleNext = () => {
    Haptics.impactAsync(Haptics.ImpactFeedbackStyle.Medium);
    setCurrentStep(p => p + 1);
  };
  
  const handleBack = () => {
    Haptics.impactAsync(Haptics.ImpactFeedbackStyle.Light);
    setCurrentStep(p => Math.max(0, p - 1));
  };

  const handleComplete = () => {
    Haptics.notificationAsync(Haptics.NotificationFeedbackType.Success);
    updateSettings({
      onboardingCompleted: true,
      fitnessGoal: selectedGoal || undefined,
      fitnessLevel: selectedLevel || undefined,
    });
    updateWeeklyGoal(weeklyGoal);
    router.replace('/');
  };

  const handleSkip = () => {
    updateSettings({ onboardingCompleted: true });
    router.replace('/');
  };

  return (
    <View style={styles.container}>
      <StatusBar style="light" />
      
      {/* Background Global */}
      <View style={StyleSheet.absoluteFill}>
        <LinearGradient
            colors={[THEME.bg, '#1a1f25', '#000000']}
            style={StyleSheet.absoluteFill}
        />
        {/* On peut remettre la photo en fond flou tr√®s l√©ger si on veut, mais le gradient est plus propre pour les √©tapes */}
      </View>

      {/* Header Navigation (Sauf Welcome & Ready) */}
      {currentStep > 0 && currentStep < 4 && (
        <SafeAreaView edges={['top']} style={styles.header}>
          <TouchableOpacity onPress={handleBack} style={styles.navBtn}>
            <Text style={styles.navIcon}>‚Üê</Text>
          </TouchableOpacity>
          <SegmentedProgress current={currentStep - 1} total={3} />
          <TouchableOpacity onPress={handleSkip} style={styles.navBtn}>
             <Text style={styles.skipText}>{t('common.skip') || 'Passer'}</Text>
          </TouchableOpacity>
        </SafeAreaView>
      )}

      {/* Contenu */}
      <View style={styles.contentContainer}>
        {currentStep === 0 && <WelcomeStepOldStyle onNext={handleNext} />}
        {currentStep === 1 && <GoalStepOldCards selected={selectedGoal} onSelect={setSelectedGoal} />}
        {currentStep === 2 && <LevelStepNewStyle selected={selectedLevel} onSelect={setSelectedLevel} />}
        {currentStep === 3 && <FrequencyStepNewStyle value={weeklyGoal} onChange={setWeeklyGoal} />}
        {currentStep === 4 && <ReadyStep onComplete={handleComplete} />}
      </View>

      {/* Footer Flottant (Sauf Welcome & Ready) */}
      {currentStep > 0 && currentStep < 4 && (
        <Animated.View entering={FadeInDown} style={styles.footerContainer}>
          <BlurView intensity={30} tint="dark" style={styles.footerBlur}>
            <GlassButton 
              title={t('common.continue') || "Continuer"}
              icon="‚ûú"
              onPress={handleNext}
              fullWidth
              disabled={(currentStep === 1 && !selectedGoal) || (currentStep === 2 && !selectedLevel)}
            />
          </BlurView>
        </Animated.View>
      )}
    </View>
  );
}

